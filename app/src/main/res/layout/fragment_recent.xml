<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emile1.findaparty.Activity.fragment.RecentFragment">
    <ImageView
        android:contentDescription=""
        android:id="@+id/amumu_background"
        android:src="@drawable/amumu_sad"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="210dp"
        android:layout_height="320dp" />
    <TextView
        android:id="@+id/no_lan_textview"
        android:layout_gravity="center"
        android:text="@string/message_no_lan"
        android:visibility="invisible"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:backgroundTint="@color/buttonLoginColor"
        style="?android:attr/progressBarStyle"
        android:layout_width="55dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recent_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>
