<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp" >

    <RelativeLayout
        android:id="@+id/rl_row_lan"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/textViewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/circle_start"
            android:background="@drawable/ic_cardview_time" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textViewStart"
            android:textColor="@color/textViews"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/textViewStart"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewStart"
            android:background="@drawable/ic_dots_24dp" />

        <ImageView
            android:id="@+id/textViewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dots"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/circle_end"
            android:background="@drawable/ic_cardview_time" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textViewEnd"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/textViewEnd"
            android:textColor="@color/textViews"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMaxPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:textColor="@color/textViews"
            android:text="Max People :" />

        <TextView
            android:id="@+id/maxSpots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/dots"
            android:layout_centerVertical="true"
            android:textColor="@color/textViews"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endTime"
            android:layout_alignStart="@+id/textViewMaxPlaces"
            android:textColor="@color/textViews"
            android:text="Participants : " />

        <TextView
            android:id="@+id/participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/textViews"
            android:textStyle="bold"
            android:layout_above="@id/endTime"
            android:layout_alignStart="@+id/maxSpots" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
