<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonLoginColor</item>
    </style>

    <style name="MyDatepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/datepicker</item>

    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#c2c5c5c5</item>
        <item name="colorControlActivated">#96c5c5c5</item>
        <item name="colorControlHighlight">#c2c5c5c5</item>
        <item name="android:editTextColor">#f2ffffff</item>
        <item name="colorAccent">@color/buttonLoginColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">#212121</item>
        <item name="android:background">#000000</item>
        <item name="android:colorButtonNormal">#FF0000</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/buttonLoginColor</item>
        <item name="android:indeterminateDrawable">@drawable/circular_progress_dialog</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:background">@color/tab_background</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance44" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_navigation_item</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
